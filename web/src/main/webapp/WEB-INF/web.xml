<?xml version="1.0" encoding="UTF-8"?>
<!-- This web.xml file is not required when using Servlet 3.0 container, 
    see implementation details http://jersey.java.net/nonav/documentation/latest/jax-rs.html#d4e194 -->
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <description>tmw-tracking-${project.version}-${env.BUILD_NUMBER}-${env.GIT_BRANCH}</description>
    <display-name>tmw-tracking-${project.version}-${env.BUILD_NUMBER}-${env.GIT_BRANCH}</display-name>

    <listener>
        <listener-class>
            com.tmw.tracking.web.TrackingContextListener
        </listener-class>
    </listener>
    <listener>
        <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.tmw.tracking.utils.ApplicationInitialization</listener-class>
    </listener>
    <filter>
        <filter-name>shiroFilter</filter-name>
        <filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
    </filter>
    <filter>
        <filter-name>headerFilter</filter-name>
        <filter-class>com.tmw.tracking.filter.TrackingWebHeadersFilter</filter-class>
    </filter>
    <filter>
        <filter-name>guiceFilter</filter-name>
        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>shiroFilter</filter-name>
        <url-pattern>/webresources/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>shiroFilter</filter-name>
        <url-pattern>/tmw/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>headerFilter</filter-name>
        <url-pattern>/tmw/*</url-pattern>
        <url-pattern>/webresources/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>guiceFilter</filter-name>
        <url-pattern>/webresources/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>guiceFilter</filter-name>
        <url-pattern>/tmw/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>scheduleOrderService</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>scheduleOrderService</servlet-name>
        <url-pattern>/scheduleOrderService</url-pattern>
    </servlet-mapping>
<!--
     NOTE: uncomment for applying only https requests
-->
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/webresources/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
